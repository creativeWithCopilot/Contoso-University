@page "/courses"
@inject CourseService CourseService
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime
@using UniversityFrontend.DTOs
@using UniversityFrontend.Services

<h3>Courses</h3>
<!-- Search Section -->
<div class="mb-3">
    <label for="searchBy">Search by:</label>
    <select @bind="searchOption" id="searchBy" class="form-select">
        <option value="CourseID">Course ID</option>
        <option value="Title">Title</option>
    </select>

    <input type="text" @bind="searchTerm" placeholder="Enter search value..." class="form-control mt-2" />

    <button class="btn btn-primary mt-2" @onclick="SearchCourses">Search</button>
    <button class="btn btn-secondary mt-2" @onclick="ResetSearch">Back to full list</button>
</div>

@if (courses == null)
{
    <p><em>Loading...</em></p> // Show a loading message while data is being fetched
}
else
{
    // Display the list of courses in a table format with options to edit or delete each course.
    <table class="table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Credits</th>
                <th></th> <!-- Actions column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var c in courses)
            {
                <tr>
                    <td>@c.CourseID</td>
                    <td>@c.Title</td>
                    <td>@c.Credits</td>
                    <td>
                        <button @onclick="() => EditCourse(c.CourseID)">Edit</button> | <!-- Edit navigates to CourseForm with CourseID -->
                        <button @onclick="() => DeleteCourse(c.CourseID)">Delete</button> <!-- Delete calls DeleteCourse method -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/course-form">Add New Course</a> <!-- Link to add a new course -->
}

@code {
    private List<CourseDto>? courses; // Holds the list of courses retrieved from the backend
    private string searchOption = "CourseID"; // Default search option
    private string searchTerm = string.Empty; // Search term entered by the user

    // Lifecycle method called when the component is initialized.
    // Fetches the list of courses from the backend API.
    protected override async Task OnInitializedAsync() 
    {
        courses = await CourseService.GetCoursesAsync();
    }

    // Filters courses based on selected search option (CourseID or Title).
    private void SearchCourses()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
            return;

        if (searchOption == "CourseID" && int.TryParse(searchTerm, out int courseId))
        {
            courses = courses?.Where(c => c.CourseID == courseId).ToList();
        }
        else if (searchOption == "Title")
        {
            courses = courses?.Where(c => c.Title.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)).ToList();
        }
    }

    // Resets the search and reloads all courses.
    private async Task ResetSearch()
    {
        searchTerm = string.Empty;
        courses = await CourseService.GetCoursesAsync();
    }

    // Navigates to the CourseForm page for editing a specific course by ID.
    private void EditCourse(int id)
    {
        NavManager.NavigateTo($"course-form/{id}");
    }

    // Deletes a course by ID using CourseService.
    // After deletion, it refreshes the list of courses to reflect the changes in the UI.
    private async Task DeleteCourse(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Delete student {id}?")) // Confirmation dialog before deletion
        {
            await CourseService.DeleteCourseAsync(id);
            courses = await CourseService.GetCoursesAsync(); // Refresh the list of courses after deletion
        }
        
    }
}
