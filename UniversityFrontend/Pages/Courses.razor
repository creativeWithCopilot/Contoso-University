@page "/courses"
@inject CourseService CourseService
@using UniversityFrontend.DTOs
@using UniversityFrontend.Services

<h3>Courses</h3>

@if (courses == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Credits</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in courses)
            {
                <tr>
                    <td>@c.CourseID</td>
                    <td>@c.Title</td>
                    <td>@c.Credits</td>
                    <td>
                        <a href="/course-form/@c.CourseID">Edit</a> |
                        <button @onclick="() => DeleteCourse(c.CourseID)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/course-form">Add New Course</a>
}

@code {
    private List<CourseDto>? courses;

    protected override async Task OnInitializedAsync()
    {
        courses = await CourseService.GetCoursesAsync();
    }

    private async Task DeleteCourse(int id)
    {
        await CourseService.DeleteCourseAsync(id);
        courses = await CourseService.GetCoursesAsync();
    }
}
